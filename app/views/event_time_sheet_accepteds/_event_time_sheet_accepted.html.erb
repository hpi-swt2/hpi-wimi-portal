<p>
  <%=
    time_sheet = TimeSheet.find(event_time_sheet_accepted.trigger.id)
    t(
      '.full_html',
      signer: link_to(
        User.find(time_sheet.signer).name,
        user_path(time_sheet.signer)),
      project: link_to(
        time_sheet.project.title,
        project_path(time_sheet.project)),
      month: l(Date.new(1, time_sheet.month, 1), format: :without_day_year))
  %>
  <%= link_to(t('.view'), work_days_path(month: time_sheet.month, year: time_sheet.year, project: time_sheet.project.id, user_id: current_user.id), class: 'btn btn-default') %>
</p>
