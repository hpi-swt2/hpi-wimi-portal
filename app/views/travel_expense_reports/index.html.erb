<p id="notice"><%= notice %></p>

<h1>Listing Travel Expense Reports</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travel_expense_reports.each do |travel_expense_report| %>
      <tr>
        <td><%=h travel_expense_report.name %></td>
        <td><%= link_to 'Show', trip_travel_expense_report_path(@trip,travel_expense_report) %></td>
        <td><%= link_to 'Edit', edit_trip_travel_expense_report_path(@trip,travel_expense_report) %></td>
        <td><%= link_to 'Destroy', trip_travel_expense_report_path(@trip,travel_expense_report), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Travel expense report', new_trip_travel_expense_report_path(@trip) , :class => "btn btn-primary"%> |
<%= link_to 'Back', @trip , :class => "btn btn-primary"%>
