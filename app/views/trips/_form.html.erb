<%- model_class = Trip -%>
<%- model_class2 = TripDatespan -%>
<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination %>
  </div>
  <div class="field">
    <%= f.label :reason %><br>
    <%= f.text_area :reason %>
  </div>
  <table class="table table-striped">
    <tr>
      <th><%= model_class2.human_attribute_name(:start_date) %></td>
      <th><%= model_class2.human_attribute_name(:end_date) %></td>
      <th><%= model_class2.human_attribute_name(:days_abroad) %></td>
    </tr>
    <%= f.fields_for :trip_datespans do |d| %>
    <tr>
      <td>
        <div class="control-group">
        <%= d.text_field :start_date, required: false, class: 'form-control', 'data-provide': "datepicker", 'data-date-orientation': "bottom auto", 'data-date-format': "dd-mm-yyyy", 'data-date-autoclose': true, 'data-date-language': I18n.locale %>
        </div>
      </td>
      <td>
        <div class="control-group">
        <%= d.text_field :end_date, required: false, class: 'form-control', 'data-provide': "datepicker", 'data-date-orientation': "bottom auto", 'data-date-format': "dd-mm-yyyy", 'data-date-autoclose': true, 'data-date-language': I18n.locale %>
        </div>
      </td>
      <td><%= d.number_field :days_abroad %></td>
    </tr>
    <% end %>
  </table>
  <div class="field">
    <%= f.label :annotation %><br>
    <%= f.text_area :annotation %>
  </div>
  <div class="field">
    <%= f.label :signature %><br>
    <%= f.check_box :signature %>
  </div>

  <div class="actions">
    <%= f.submit nil, class: "btn btn-primary"%>
  </div>
<% end %>
