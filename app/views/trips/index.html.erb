<p id="notice"><%= notice %></p>

<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2).titleize %></h1>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Destination</th>
      <th>Reason</th>
      <th>Annotation</th>
      <th>Signature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.reason %></td>
        <td><%= trip.annotation %></td>
        <td><%= trip.signature %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path,:class => "btn btn-primary"%>
