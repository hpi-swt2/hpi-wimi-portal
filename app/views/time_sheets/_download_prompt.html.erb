<% url ||= '' %>

<div class="modal fade" id="download-pdf-modal" role="dialog" aria-labelledby="add-user-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="add-user-label"><%= t('time_sheet.download.has_comments') %></h4>
        <div class="small"><%= t('time_sheet.download.setting_reminder') %></div>
      </div>
      <div class="modal-body" >
        <div class="row">
          <div class="col-md-6"><%= link_to t('time_sheet.download.with_comments'), url + '?include_comments=1', class: 'btn btn-success btn-block dl-with-comments' %></div>
          <div class="col-md-6"><%= link_to t('time_sheet.download.without_comments'), url + '?include_comments=0', class: 'btn btn-danger btn-block dl-without-comments' %></div>
        </div>
      </div>
    </div>
  </div>
</div>