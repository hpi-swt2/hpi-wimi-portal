<%= form_for @publication, :html => { :class => "form-horizontal publication" } do |f| %>
<%- model_class = Publication -%>

    <% if @publication.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@publication.errors.count, "error") %> prohibited this publication from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @publication.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :venue, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :venue, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:venue]) %>
  </div>
  <div class="control-group">
    <%= f.label :type_, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :type_, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:type_]) %>
  </div>
  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :project_id, Project.all, :id, :title, {:selected => @publication.project_id, prompt: true, :include_blank =>"none"}, {} %>
    </div>
    <%= error_span(@publication[:project_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :users, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_check_boxes(:user_ids, User.all, :id, :email) %>
    </div>
    <%= error_span(@publication[:users]) %>
  </div>

  <% for user in User.all %>
      <div>
        <%= check_box_tag "publication[user_ids][]", user.id, @publication.users.include?(user) %>
        <%= user.name %>
      </div>
  <% end %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            publications_path, :class => 'btn btn-default' %>

<% end %>
