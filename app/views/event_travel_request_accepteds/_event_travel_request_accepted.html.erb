  <%=
    trip = Trip.find(event_travel_request_accepted.trigger)
    person_in_power = trip.person_in_power
    t(
      '.full_html',
      link_to_request: link_to(t('.request'), trip),
      date: l(trip.created_at),
      person_in_power: link_to(person_in_power.name, person_in_power),
      link_to_view: link_to(t('.view'), trip))
  %>
