<%= form_for(@user) do |f| %>

  <div class="page-header">
    <h1><%=t '.title', default: "Edit Your Leave" %></h1>
  </div>

  <div class="form-group">
    <%= f.label "Remaining Leave", class: 'control-label' %>
    <%= f.number_field :remaining_leave, value: @user.remaining_leave, min: 0, class: 'form-control' %>
    <%= error_span(@user[:remaining_leave]) %>
  </div>
  <div class="form-group">
    <%= f.label "Remaining Leave Left From Last Year", class: 'control-label' %>
    <%= f.number_field :remaining_leave_last_year, value: @user.remaining_leave_last_year, min: 0, class: 'form-control' %>
    <%= error_span(@user[:remaining_leave_last_year]) %>
  </div>
  <%= f.submit nil, value: 'Save', class: 'btn btn-primary' %>
  <%= link_to t('.cancel'), user_path(@user), class: 'btn btn-danger' %>
<% end %>
