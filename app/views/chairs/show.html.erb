<%- model_class = Chair -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @chair.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:administrator) %>:</strong></dt>
  <dd>
    <% if @chair.admins.any? %>
        <%= @chair.admins.first.name %> (<%= @chair.admins.first.id %>)
    <% end %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:representative) %>:</strong></dt>
  <dd>
    <% if @chair.representatives.any? %>
        <%= @chair.representatives.first.name %> (<%= @chair.representatives.first.id %>)
    <% end %>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            chairs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_chair_path(@chair), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            chair_path(@chair),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>