<%- model_class = Chair -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%= model_class.human_attribute_name(:application_status) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @chairs.each do |chair| %>
      <tr>
        <td><%= link_to chair.id, chair_path(chair) %></td>
        <td><%= chair.name %></td>
        <td><%=l chair.created_at %></td>
        <% if @chairapp = ChairApplication.find_by(:user_id => current_user.id, :chair => chair.id) %>
            <% if @chairapp.status == 'pending' %>
                <td>
                  <span class="label label-warning"><%= @chairapp.status %></span>
                  <%= link_to t('.cancelApp', :default => t("helpers.links.cancelApp")),
                              chair_cancelapp_event_path(:id => @chairapp.id), :method => :post, :class => 'btn btn-danger btn-xs' %>
                </td>
            <% elsif @chairapp.status == 'accepted' %>
                <td><span class="label label-success"><%= @chairapp.status %></span></td>
            <% elsif @chairapp.status == 'declined' %>
                <td>
                  <span class="label label-danger"><%= @chairapp.status %></span>
                  <%= link_to t('.destroy', :default => t("helpers.links.deleteApp")),
                              chair_application_path(@chairapp),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %>
                </td>
            <% else %>
                <td><%= @chairapp.status %></td>
            <% end %>
        <% elsif current_user.is?('user') %>
            <td>
              <%= link_to t('.apply', :default => t("helpers.links.apply")),
                          chair_apply_event_path(:chair => chair), :method => :post, :class => 'btn btn-primary btn-xs' %>
            </td>
        <% elsif current_user.is?('superadmin') %>
            <td>
              <% ChairApplication.where(:chair_id => chair.id).each do |chairapp| %>
                  <br />
                  <% @chairappuser = User.find_by(:id => chairapp.user_id) %>
                  User: <%= @chairappuser.name %> &#040;<%= @chairappuser.id %>&#041;
                  <% if chairapp.status == 'pending' %>
                      <%= link_to t('.acceptApp', :default => t("helpers.links.acceptApp")),
                                  chair_acceptapp_event_path(:chair => chair, :user => chairapp.user), :method => :post, :class => 'btn btn-success btn-xs' %>
                      <%= link_to t('.declineApp', :default => t("helpers.links.declineApp")),
                                  chair_declineapp_event_path(:id => chairapp.id), :method => :post, :class => 'btn btn-danger btn-xs' %>
                  <% else %>
                      <% if chairapp.status == 'accepted' %>
                          <span class="label label-success"><%= chairapp.status %></span>
                      <% elsif chairapp.status == 'declined' %>
                          <span class="label label-danger"><%= chairapp.status %></span>
                          <%= link_to t('.destroy', :default => t("helpers.links.deleteApp")),
                                      chair_application_path(chairapp),
                                      :method => :delete,
                                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                      :class => 'btn btn-xs btn-danger' %>
                      <% else %>
                          <span class="label label-default"><%= @chairapp.status %></span>
                      <% end %>
                  <% end %>
              <% end %>
            </td>
        <% else %>
            <td><span class="label label-default">No Application</span></td>
        <% end %>
        <td>
          <% if current_user.is?('superadmin') %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_chair_path(chair), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          chair_path(chair),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>

          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<% if current_user.is?('superadmin') %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_chair_path,
                :class => 'btn btn-primary' %>
<% end %>

